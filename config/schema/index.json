{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [
        "name",
        "server",
        "logger",
        "overlay"
    ],
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1
        },
        "server": {
            "$ref": "/server"
        },
        "logger": {
            "$ref": "/logger"
        },
        "overlay": {
            "$ref": "/overlay"
        }
    },
    "additionalProperties": false
}