{
    "compilerOptions": {
        "outDir": "build",
        "rootDir": ".",
        "target": "es2019",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": false,
        "strict": true,
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "skipLibCheck": true,
        "paths": {
            "@src": [ "src/" ],
            "@src/*": [ "src/*" ],
            "@test": [ "test/" ],
            "@test/*": [ "test/*" ],
            "*": [ "node_modules/*", "*" ]
        }
    },
    "include": [
      "src/**/*",
      "test/**/*"
    ],
    "exclude": [
        "node_modules/**"
    ]
}
